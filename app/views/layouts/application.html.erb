<!DOCTYPE html>
<html>
<head>
  <title><%=I18n.t('site.name')%></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="header">
	<h1><%=link_to I18n.t('site.name'), posts_path %></h1>
	
	<ol id="nav">
		<li><%=link_to I18n.t('nav.new_post'), new_post_path %></li>
	</ol>
	
	<div id="user">
		<% if current_user then %>
			<%=link_to current_user.to_s, edit_user_registration_path %> &mdash; <%=link_to 'Log Out', destroy_user_session_path %>
		<% else %>
			<%=link_to 'Log In', new_user_session_path %> | <%=link_to 'Register', new_user_registration_path %>
		<% end %>
	</div>
</div>

<div id="flashes">
	<%=flash[:notice]%>
	<%=flash[:error]%>
	<%=flash[:info]%>
</div>

<%= yield %>

</body>
</html>
